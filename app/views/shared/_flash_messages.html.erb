<% flash.each do |type, message| %>
  <div class="alert alert-dismissible <%= bootstrap_alert_class_for(type) %> fade show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    
    <%= message %>
  </div>
<% end %>