<div class="container">
  
  <div class="row">
    <div class="col-6">
      <h3>Projects</h3>
    </div>
    <div class="col-6 text-right">
      <%= link_to(new_project_path, class: 'btn btn-outline-primary') do %>
        <i class="fa fa-plus" aria-hidden="true"></i> Add Project
      <% end %> 
    </div>
  </div>
 
  <% if @projects.size > 0 %>
    <table class="table table-striped table-hover table-sm mt-2">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Type</th>
          <th scope="col">Owner</th>
          <th scope="col">Status</th>
          <th scope="col">Comments</th>
          <th scope="col">Created At</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @projects %>       
      </tbody>
    </table> 
  <% else %>
    <p>No projects where found.</p>
  <% end %>
</div>
