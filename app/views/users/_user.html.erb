<tr>
  <td><%= user.id -%></td>
  <td><%= user.full_name -%></td>
  <td><%= user.role -%></td>
  <td><%= user.created_at.to_s(:db) -%></td>
  <td class="text-right">
    <% if policy(user).update? %>
      <%= link_to edit_user_path(user), class: 'btn btn-link btn-sm' do %>
        <i class="fa fa-edit" aria-hidden="true"></i> Edit
      <% end %>
    <% end %>
  
    <% if policy(user).destroy? %>
      <%= link_to user, {method: :delete, class: 'btn btn-link btn-sm', data: { confirm: 'Are you sure?' }} do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i> Destroy
      <% end %>
    <% end %>
  </td>
</tr>