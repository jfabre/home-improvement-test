<div class="container">

  <h3>Users</h3>  

  <% if @users.size > 0 %>
    <table class="table table-striped table-hover table-sm mt-2">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Role</th>
          <th scope="col">Created At</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>       
      </tbody>
    </table> 
  <% else %>
    <p>No users where found.</p>
  <% end %>

</div>  